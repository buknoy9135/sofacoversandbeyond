<div class="bg-gradient-to-b from-gray-50 to-white py-12 sm:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="flex items-center justify-between mb-10">
      <h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900 tracking-tight">Our Products</h1>
      <% if admin_signed_in? %>
        <%= link_to "Add New Product", new_product_path, class: "inline-block bg-indigo-600 text-white text-sm font-medium px-5 py-2.5 rounded-lg shadow hover:bg-indigo-700 transition" %>
      <% end %>
    </div>

    <!-- Product Grid -->
    <% if @products.any? %>
      <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <% @products.each do |product| %>
          <div class="bg-white rounded-2xl shadow-sm hover:shadow-md transition overflow-hidden flex flex-col">
            <% if product.images.attached? %>
              <%= link_to product_path(product) do %>
                <%= image_tag product.images.first, class: "w-full h-48 object-contain", loading: "lazy" %>
              <% end %>
            <% else %>
              <div class="w-full h-48 bg-gray-100 flex items-center justify-center text-gray-400 text-sm">No Image</div>
            <% end %>
            <div class="p-5 flex flex-col flex-1">
              <h2 class="text-lg font-semibold text-gray-900 mb-1">
                <%= link_to product.name, product_path(product), class: "hover:text-indigo-600" %>
              </h2>
              <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= product.description.presence || "No description available." %></p>
              <% if product.price.present? %>
                <p class="text-gray-900 font-bold text-lg mb-4"><%= number_to_currency(product.price, unit: "â‚±", precision: 2) %></p>
              <% else %>
                <p class="text-gray-500 italic mb-4">Price available on request</p>
              <% end %>
              <div class="mt-auto space-y-2">
                <%= link_to "View Details", product_path(product), class: "block w-full text-center bg-indigo-50 text-indigo-700 px-4 py-2 rounded-lg text-sm font-medium hover:bg-indigo-100 transition" %>
                <%= link_to "Request Quote", new_quote_request_path(product_id: product.id), class: "block w-full text-center bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-indigo-700 transition" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-16 text-lg">No products available yet.</p>
    <% end %>
  </div>
</div>

<div class="flex flex-col min-h-screen bg-gray-50">
  <!-- Hero -->
  <section class="relative bg-gradient-to-r from-indigo-600 via-indigo-500 to-indigo-400 text-white">
    <div class="mx-auto max-w-7xl px-6 py-20 text-center">
      <h1 class="text-4xl sm:text-6xl font-extrabold leading-tight">
        Transform Your Living Space with Elegance
      </h1>
      <p class="mt-6 max-w-2xl mx-auto text-lg text-indigo-100">
        Premium customized sofa covers and curtains — designed to fit your style,
        protect your furniture, and bring warmth to your home.
      </p>
      <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center">
        <%= link_to "Explore Products", products_path, class: "px-8 py-3 rounded-lg bg-white text-indigo-700 font-semibold shadow hover:bg-gray-100 transition" %>
        <%= link_to "Get a Free Quote", new_quote_request_path, class: "px-8 py-3 rounded-lg border border-white text-white font-semibold hover:bg-white hover:text-indigo-700 transition" %>
      </div>
    </div>
  </section>

  <!-- About Us -->
  <section class="bg-white py-16">
    <div class="max-w-6xl mx-auto px-6 grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl font-bold text-gray-900">Crafted with Care</h2>
        <p class="mt-4 text-gray-600 leading-relaxed">
          Every sofa cover and curtain we make is tailored to your unique preferences.
          Whether you want to protect your furniture, add a touch of luxury, or
          completely refresh your interiors — we’ve got you covered.
        </p>
        <p class="mt-3 text-gray-600 leading-relaxed">
          From modern minimalist styles to timeless classics, our fabrics and designs
          are carefully curated to elevate your space.
        </p>
        <div class="mt-6">
          <%= link_to "View Our Collection", products_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 shadow transition" %>
        </div>
      </div>
      <div class="rounded-xl overflow-hidden shadow-lg">
        <img
  src="https://images.pexels.com/photos/1571460/pexels-photo-1571460.jpeg?auto=compress&cs=tinysrgb&w=1200"
  alt="Living Room with Sofa and Curtains"
  class="w-full h-full object-cover rounded-xl shadow-lg"
  loading="lazy"
/>

      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-6">
      <h2 class="text-3xl font-bold text-center text-gray-900">Why Choose Us</h2>
      <p class="mt-3 text-center text-gray-600">Quality, design, and service that stand out.</p>
      <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="p-6 bg-white rounded-xl shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold text-indigo-600">Perfect Fit</h3>
          <p class="mt-2 text-gray-600">Custom-made to your sofa’s exact measurements.</p>
        </div>
        <div class="p-6 bg-white rounded-xl shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold text-indigo-600">Premium Fabrics</h3>
          <p class="mt-2 text-gray-600">Choose from a wide selection of textures and colors.</p>
        </div>
        <div class="p-6 bg-white rounded-xl shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold text-indigo-600">Fast & Reliable</h3>
          <p class="mt-2 text-gray-600">Enjoy quick delivery and dedicated customer support.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="bg-white py-16">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold text-gray-900">Our Customized Services</h2>
      <p class="mt-3 text-gray-600">Tailored home solutions to match your unique lifestyle and interior design.</p>

      <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 text-left">

        <!-- Sofa Covers -->
        <div class="p-6 bg-gray-50 rounded-xl shadow hover:shadow-lg transition">
          <div class="flex items-center space-x-3">
            <!-- Sofa SVG -->
            <svg class="w-7 h-7 text-indigo-600 flex-shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" aria-hidden="true" role="img">
              <title>Sofa</title>
              <rect x="2.5" y="8" width="19" height="6" rx="1.2" stroke-width="1.6"/>
              <rect x="3.5" y="6" width="6.5" height="4" rx="0.8" stroke-width="1.6"/>
              <rect x="14" y="6" width="6.5" height="4" rx="0.8" stroke-width="1.6"/>

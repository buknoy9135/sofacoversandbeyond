<div class="max-w-2xl mx-auto bg-white shadow-lg rounded-xl p-8 mt-10">
  <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">
    Request a Quote
  </h1>

  <%= form_with model: @quote_request, local: true, multipart: true, class: "space-y-6" do |f| %>
    <% if @quote_request.errors.any? %>
      <div class="bg-red-50 border border-red-400 text-red-700 p-4 rounded">
        <h2 class="font-semibold"><%= pluralize(@quote_request.errors.count, "error") %> prevented sending:</h2>
        <ul class="mt-2 list-disc list-inside">
          <% @quote_request.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Name -->
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-12" %>
    </div>

    <!-- Email -->
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-12" %>
    </div>

    <!-- Phone -->
    <div>
      <%= f.label :contact, class: "block text-sm font-medium text-gray-700" %>
      <%= f.telephone_field :contact, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-12" %>
    </div>

    <!-- Message -->
    <div>
      <%= f.label :message, "Your request", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :message, rows: 4, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <!-- Product reference -->
    <% if @product %>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 text-sm text-gray-700">
        Youâ€™re requesting a quote for:
        <strong class="text-indigo-600"><%= @product.name %></strong>
        <%= f.hidden_field :product_id, value: @product.id %>
      </div>
    <% end %>

    <!-- Images -->
    <div>
      <%= f.label :images, "Attach images (optional)", class: "block text-sm font-medium text-gray-700" %>
      <%= f.file_field :images, multiple: true, class: "mt-1 block w-full text-sm text-gray-600 
          file:mr-4 file:py-2 file:px-4 
          file:rounded-md file:border-0 
          file:text-sm file:font-semibold 
          file:bg-indigo-100 file:text-indigo-700 
          hover:file:bg-indigo-200" %>
    </div>

    <!-- Submit -->
    <div>
      <%= f.submit "Send Request",
            class: "w-full inline-flex justify-center py-3 px-6 border border-transparent shadow-sm 
                    text-white bg-indigo-600 hover:bg-indigo-700 
                    font-medium rounded-md text-lg transition" %>
    </div>
  <% end %>
</div>

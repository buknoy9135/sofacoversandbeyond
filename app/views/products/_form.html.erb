<%= form_with(model: @product, local: true, html: { class: "space-y-6" }) do |f| %>
  <% if @product.errors.any? %>
    <div class="bg-red-50 border border-red-400 text-red-700 p-4 rounded">
      <h2 class="font-semibold"><%= pluralize(@product.errors.count, "error") %> prevented saving:</h2>
      <ul class="mt-2 list-disc list-inside">
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-12" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <!-- Optional Price -->
  <div>
    <%= f.label :price, "Price (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :price,
          step: 0.01,
          placeholder: "Leave blank if not applicable",
          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-12" %>
  </div>

  <div>
    <%= f.label :images, "Photos", class: "block text-sm font-medium text-gray-700" %>

    <% if @product.images.attached? %>
      <div class="flex flex-wrap gap-4 mb-2">
        <% @product.images.each do |image| %>
          <div class="flex flex-col items-center gap-2">
            <%= image_tag image, class: "h-20 w-20 object-cover rounded" %>
            <%= hidden_field_tag "product[remove_image_ids][]", nil %>
            <%= check_box_tag "product[remove_image_ids][]", image.id, false, id: "remove_image_#{image.id}" %>
            <%= label_tag "remove_image_#{image.id}", "Remove", class: "text-sm text-red-600" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <%= f.file_field :images, multiple: true, class: "mt-1 block w-full text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-indigo-100 file:text-indigo-700 hover:file:bg-indigo-200" %>
  </div>

  <div>
    <%= f.label :youtube_url, "YouTube Video URL (optional)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :youtube_url, placeholder: "https://www.youtube.com/watch?v=...", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm h-12" %>
  </div>

  <div>
    <%= f.submit @product.new_record? ? "Create Product" : "Update Product",
             class: "w-full inline-flex justify-center py-3 px-6 border border-transparent shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 font-medium rounded-md text-lg transition" %>
  </div>
<% end %>

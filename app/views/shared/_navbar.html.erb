<!-- Navbar -->
<header class="bg-gradient-to-r from-gray-50 to-white shadow-lg sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      
      <!-- Logo -->
      <%= link_to root_path, class: "flex items-center space-x-2" do %>
        <%= image_tag "logo.png", alt: "Sofa Covers & Beyond", class: "h-10 md:h-12 w-auto" %>
      <% end %>

      <!-- Desktop Menu -->
      <nav class="hidden md:flex space-x-8 font-medium">
        <%= link_to "Home", root_path, class: "relative text-gray-700 hover:text-gray-900 transition after:block after:h-[2px] after:bg-gray-900 after:scale-x-0 hover:after:scale-x-100 after:transition after:duration-300 after:origin-center" %>
        <%= link_to "Products", products_path, class: "relative text-gray-700 hover:text-gray-900 transition after:block after:h-[2px] after:bg-gray-900 after:scale-x-0 hover:after:scale-x-100 after:transition after:duration-300 after:origin-center" %>
        <%= link_to "Get a Quote", new_quote_request_path, class: "relative text-gray-700 hover:text-gray-900 transition after:block after:h-[2px] after:bg-gray-900 after:scale-x-0 hover:after:scale-x-100 after:transition after:duration-300 after:origin-center" %>
        <% if admin_signed_in? %>
          <%= link_to "Log Out", destroy_admin_session_path, 
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "relative text-gray-700 hover:text-red-600 transition after:block after:h-[2px] after:bg-red-600 after:scale-x-0 hover:after:scale-x-100 after:transition after:duration-300 after:origin-center" %>
        <% else %>
          <%= link_to "Log In", new_admin_session_path, class: "relative text-gray-700 hover:text-indigo-600 transition after:block after:h-[2px] after:bg-indigo-600 after:scale-x-0 hover:after:scale-x-100 after:transition after:duration-300 after:origin-center" %>
        <% end %>
      </nav>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" type="button" 
                class="text-gray-700 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-gray-400 rounded">
          <svg class="h-7 w-7" xmlns="http://www.w3.org/2000/svg" fill="none" 
               viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200 shadow-inner">
    <div class="px-4 py-3 space-y-3 font-medium">
      <%= link_to "Home", root_path, class: "block text-gray-700 hover:text-gray-900 transition" %>
      <%= link_to "Products", products_path, class: "block text-gray-700 hover:text-gray-900 transition" %>
      <%= link_to "Get a Quote", new_quote_request_path, class: "block text-gray-700 hover:text-gray-900 transition" %>
      <% if admin_signed_in? %>
        <%= link_to "Log Out", destroy_admin_session_path, 
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "block text-gray-700 hover:text-red-600 transition" %>
      <% else %>
        <%= link_to "Log In", new_admin_session_path, class: "block text-gray-700 hover:text-indigo-600 transition" %>
      <% end %>
    </div>
  </div>
</header>

<script>
  function setupMobileMenu() {
    const menu = document.getElementById("mobile-menu");
    const button = document.getElementById("mobile-menu-button");
    if (!menu || !button) return;

    // Remove previous listeners (if any)
    button.replaceWith(button.cloneNode(true));
    const newButton = document.getElementById("mobile-menu-button") || document.querySelector("#mobile-menu-button");

    newButton.addEventListener("click", e => {
      e.stopPropagation();
      menu.classList.toggle("hidden");
    });

    // Close menu when clicking a link inside
    menu.querySelectorAll("a").forEach(link => {
      link.addEventListener("click", () => menu.classList.add("hidden"));
    });

    // Close menu if clicking outside
    document.addEventListener("click", e => {
      if (!menu.contains(e.target) && !newButton.contains(e.target)) {
        menu.classList.add("hidden");
      }
    });
  }

  document.addEventListener("turbo:load", setupMobileMenu);
  document.addEventListener("DOMContentLoaded", setupMobileMenu);
</script>

